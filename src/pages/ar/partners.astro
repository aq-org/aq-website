---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Content from "~/components/widgets/Content.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

import DevelopImg from "../../assets/images/develop.jpg";
import NetImg from "../../assets/images/net.jpg";
import WorkImg from "../../assets/images/work.jpg";

const metadata = {
  title: "الشركاء",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="انضم إلى شركائنا"
    actions={[
      {
        variant: "primary",
        text: "كن شريكًا",
        href: "#",
        // icon: "tabler:handshake",
      },
      { text: "تعرف على المزيد", href: "#partners" },
    ]}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline">بناء النجاح&nbsp;</span><br />
      <span class="text-accent dark:text-white highlight">معًا</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        مهمتنا هي إنشاء شراكات دائمة تساهم في النمو والنجاح المتبادل.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Features Widget *************** -->
  <Features
    id="partners"
    tagline="شركاؤنا"
    title="من نعمل معهم"
    subtitle="نحن فخورون بالشراكة مع مجموعة متنوعة من المنظمات التي تشاركنا قيمنا والالتزام بالتميز."
    items={[
      {
        title: "عمالقة التكنولوجيا",
        description:
          "التعاون مع شركات التكنولوجيا الرائدة لجلب حلول مبتكرة إلى السوق.",
        // icon: "tabler:brand-reddit",
      },
      {
        title: "المؤسسات البحثية",
        description:
          "الشراكة مع المؤسسات البحثية الكبرى لدفع التقدم في مختلف المجالات.",
        // icon: "tabler:bulb",
      },
      {
        title: "الكيانات التعليمية",
        description:
          "التعاون مع المؤسسات التعليمية لتنمية الجيل القادم من المواهب.",
        // icon: "tabler:school",
      },
      {
        title: "المنظمات غير الربحية",
        description:
          "دعم المنظمات غير الربحية لإحداث تأثير إيجابي في المجتمعات.",
        // icon: "tabler:heart",
      },
      {
        title: "الشركات الناشئة",
        description:
          "تمكين الشركات الناشئة بالموارد والشبكات لتسريع نموها.",
        // icon: "tabler:rocket",
      },
      {
        title: "رواد الصناعة",
        description:
          "الانضمام إلى رواد الصناعة لوضع معايير جديدة للتميز.",
        // icon: "tabler:award",
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="نهجنا"
    title="استراتيجي وتعاوني"
    items={[
      {
        title: "رؤية مشتركة",
        description:
          "نبني الشراكات على أساس الرؤى المشتركة والأهداف المتوافقة.",
      },
      {
        title: "النمو المتبادل",
        description:
          "تم تصميم شراكاتنا لتعزيز النمو والنجاح المتبادل.",
      },
      {
        title: "التزام طويل الأجل",
        description:
          "نؤمن ببناء علاقات دائمة مع شركائنا.",
      },
    ]}
    image={{
      src: DevelopImg,
      alt: "التطوير مع AQ",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        تحقيق المزيد معًا
      </h3>
      استمتع بفوائد الشراكات الاستراتيجية التي تدفع الابتكار والتوسع.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: "الابتكار معًا",
        description:
          "شراكاتنا تفتح فرصًا جديدة للابتكار والنمو.",
      },
      {
        title: "مشاريع تعاونية",
        description:
          "التعاون في مشاريع تدفع حدود الممكن.",
      },
      {
        title: "الوصول العالمي",
        description: "الاستفادة من الشبكات العالمية لتحقيق أقصى تأثير وانتشار.",
      },
    ]}
    image={{
      src: WorkImg,
      alt: "العمل مع AQ",
    }}
  >
    <Fragment slot="content">
      الشراكة معنا لاستكشاف آفاق جديدة وتحقيق نجاح غير مسبوق.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: "الدعم المخصص",
        description:
          "يحصل شركاؤنا على دعم وموارد مخصصة لضمان النجاح.",
      },
      {
        title: "فوائد حصرية",
        description:
          "الوصول إلى فوائد وفرص حصرية من خلال برامج الشراكة لدينا.",
      },
      {
        title: "مشاركة المجتمع",
        description:
          "كن جزءًا من مجتمع من المنظمات المتشابهة في التفكير الملتزمة بالتميز.",
      },
    ]}
    image={{
      src: NetImg,
      alt: "AQ Net",
    }}
  >
    <Fragment slot="content">
      انضم إلى مجتمع مزدهر من الشركاء المكرسين لتحقيق التميز.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="الشراكة معنا"
    subtitle="ابحث عن إجابات للأسئلة الشائعة حول كيفية أن تصبح شريكًا."
    tagline="الأسئلة الشائعة"
    classes={{ container: "max-w-6xl" }}
    items={[
      {
        title: "كيف يمكننا أن نصبح شريكًا؟",
        description:
          "املأ نموذج استفسار الشراكة الخاص بنا، وسيتواصل فريقنا معك لمناقشة التعاون المحتمل.",
      },
      {
        title: "ما هي فوائد الشراكة؟",
        description:
          "يحصل الشركاء على موارد حصرية، دعم مخصص، وشبكة من المنظمات المتشابهة في التفكير.",
      },
      {
        title: "هل يمكن للمنظمات الدولية الشراكة معكم؟",
        description:
          "نعم، نرحب بالمنظمات الدولية للانضمام إلى شبكتنا العالمية من الشركاء.",
      },
      {
        title: "ما هي أنواع الشراكات التي تقدمونها؟",
        description:
          "نحن نقدم أنواعًا مختلفة من الشراكات، بما في ذلك الاستراتيجية، التعاونية، الرعاية، وأكثر.",
      },
      {
        title: "أين يمكنني معرفة المزيد عن شركائكم؟",
        description:
          "قم بزيارة صفحة شركائنا للحصول على معلومات مفصلة عن شركائنا الحاليين وقصص نجاحهم.",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: "primary",
        text: "انضم إلينا",
        href: "#",
        // icon: "tabler:handshake",
      },
    ]}
  >
    <Fragment slot="title">
      التعاون مع&nbsp;<br class="block sm:hidden" /><span
        class="sm:whitespace-nowrap">شركائنا</span
      >
    </Fragment>
    <Fragment slot="subtitle">
      كن جزءًا من شبكة مزدهرة تقدر الابتكار، والنمو، والنجاح المتبادل.
    </Fragment>
  </CallToAction>
</Layout>