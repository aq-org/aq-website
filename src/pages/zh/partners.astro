---
import Layout from "~/layouts/zh/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Content from "~/components/widgets/Content.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

import DevelopImg from "../../../assets/images/develop.jpg";
import NetImg from "../../../assets/images/net.jpg";
import WorkImg from "../../../assets/images/work.jpg";

const metadata = {
  title: "合作伙伴",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="与我们的合作伙伴携手"
    actions={[
      {
        variant: "primary",
        text: "成为合作伙伴",
        href: "#",
        // icon: "tabler:handshake",
      },
      { text: "了解更多", href: "#partners" },
    ]}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline">共同构建成功&nbsp;</span><br />
      <span class="text-accent dark:text-white highlight">共同</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        我们的使命是建立持久的合作关系，促进共同增长和成功。
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Features Widget *************** -->
  <Features
    id="partners"
    tagline="我们的合作伙伴"
    title="我们合作的对象"
    subtitle="我们很自豪与一群价值观和追求卓越的组织合作。"
    items={[
      {
        title: "科技巨头",
        description:
          "与领先的科技公司合作，推出创新解决方案。",
        // icon: "tabler:brand-reddit",
      },
      {
        title: "研究机构",
        description:
          "与顶尖研究机构合作，推动各个领域的进步。",
        // icon: "tabler:bulb",
      },
      {
        title: "教育机构",
        description:
          "与教育机构合作，培养下一代人才。",
        // icon: "tabler:school",
      },
      {
        title: "非营利组织",
        description:
          "支持非营利组织，为社区创造积极影响。",
        // icon: "tabler:heart",
      },
      {
        title: "初创公司",
        description:
          "为初创公司提供资源和网络，加速其发展。",
        // icon: "tabler:rocket",
      },
      {
        title: "行业领袖",
        description:
          "与行业领袖联手，树立卓越新标准。",
        // icon: "tabler:award",
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="我们的方法"
    title="战略性与协作性"
    items={[
      {
        title: "共同愿景",
        description:
          "我们建立基于共同愿景和共同目标的合作关系。",
      },
      {
        title: "共同增长",
        description:
          "我们的合作关系旨在促进共同增长和成功。",
      },
      {
        title: "长期承诺",
        description:
          "我们相信与合作伙伴建立持久关系。",
      },
    ]}
    image={{
      src: DevelopImg,
      alt: "与AQ一起开发",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        共同取得更多成就
      </h3>
      体验推动创新和扩张的战略合作伙伴关系的好处。
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: "共同创新",
        description:
          "我们的合作关系为创新和增长开启新机会。",
      },
      {
        title: "协作项目",
        description:
          "合作开展推动可能性边界的项目。",
      },
      {
        title: "全球影响",
        description: "利用全球网络最大化影响和覆盖范围。",
      },
    ]}
    image={{
      src: WorkImg,
      alt: "与AQ一起工作",
    }}
  >
    <Fragment slot="content">
      与我们合作，探索新的视野，取得前所未有的成功。
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: "专属支持",
        description:
          "我们的合作伙伴获得专属支持和资源，确保成功。",
      },
      {
        title: "独家优惠",
        description:
          "通过我们的合作计划获得独家优惠和机会。",
      },
      {
        title: "社区参与",
        description:
          "成为一个致力于卓越的志同道合组织的社区成员。",
      },
    ]}
    image={{
      src: NetImg,
      alt: "AQ网络",
    }}
  >
    <Fragment slot="content">
      加入一个繁荣的合作伙伴社区，致力于实现卓越。
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="与我们合作"
    subtitle="找到关于成为合作伙伴的常见问题的答案。"
    tagline="常见问题解答"
    classes={{ container: "max-w-6xl" }}
    items={[
      {
        title: "我们如何成为合作伙伴？",
        description:
          "填写我们的合作咨询表格，我们的团队将与您联系，讨论潜在的合作。",
      },
      {
        title: "合作的好处是什么？",
        description:
          "合作伙伴获得独家资源、专属支持和志同道合组织网络。",
      },
      {
        title: "国际组织可以成为您的合作伙伴吗？",
        description:
          "是的，我们欢迎国际组织加入我们的全球合作伙伴网络。",
      },
      {
        title: "您提供哪些类型的合作关系？",
        description:
          "我们提供各种类型的合作关系，包括战略性、协作性、赞助等。",
      },
      {
        title: "我在哪里可以了解更多关于您的合作伙伴？",
        description:
          "访问我们的合作伙伴页面，了解有关我们当前合作伙伴及其成功故事的详细信息。",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: "primary",
        text: "加入我们",
        href: "#",
        // icon: "tabler:handshake",
      },
    ]}
  >
    <Fragment slot="title">
      与&nbsp;<br class="block sm:hidden" /><span
        class="sm:whitespace-nowrap">我们的合作伙伴</span
      >
    </Fragment>
    <Fragment slot="subtitle">
      成为重视创新、增长和共同成功的繁荣网络的一部分。
    </Fragment>
  </CallToAction>
</Layout>