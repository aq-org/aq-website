---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Note from "~/components/widgets/Note.astro";
import Features from "~/components/widgets/Features.astro";
import Content from "~/components/widgets/Content.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

import DevelopImg from "../assets/images/develop.jpg";
import NetImg from "../assets/images/net.jpg";
import WorkImg from "../assets/images/work.jpg";

const metadata = {
  title: "Partners",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Join Hands with Our Partners"
    actions={[
      {
        variant: "primary",
        text: "Become a Partner",
        href: "#",
        // icon: "tabler:handshake",
      },
      { text: "Learn more", href: "#partners" },
    ]}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline">Building Success&nbsp;</span><br />
      <span class="text-accent dark:text-white highlight">Together</span>
    </Fragment>
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Our mission is to create lasting partnerships that contribute to mutual
        growth and success.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->
  <Note />

  <!-- Features Widget *************** -->
  <Features
    id="partners"
    tagline="Our Partners"
    title="Who We Work With"
    subtitle="We are proud to partner with a diverse group of organizations that share our values and commitment to excellence."
    items={[
      {
        title: "Tech Giants",
        description:
          "Collaborating with leading technology companies to bring innovative solutions to market.",
        // icon: "tabler:brand-reddit",
      },
      {
        title: "Research Institutions",
        description:
          "Partnering with top research institutions to drive advancements in various fields.",
        // icon: "tabler:bulb",
      },
      {
        title: "Educational Entities",
        description:
          "Working with educational institutions to nurture the next generation of talent.",
        // icon: "tabler:school",
      },
      {
        title: "Non-Profits",
        description:
          "Supporting non-profit organizations to create a positive impact in communities.",
        // icon: "tabler:heart",
      },
      {
        title: "Startups",
        description:
          "Empowering startups with resources and networks to accelerate their growth.",
        // icon: "tabler:rocket",
      },
      {
        title: "Industry Leaders",
        description:
          "Joining forces with industry leaders to set new standards of excellence.",
        // icon: "tabler:award",
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="Our Approach"
    title="Strategic and Collaborative"
    items={[
      {
        title: "Shared Vision",
        description:
          "We build partnerships based on shared visions and common goals.",
      },
      {
        title: "Mutual Growth",
        description:
          "Our partnerships are designed to foster mutual growth and success.",
      },
      {
        title: "Long-term Commitment",
        description:
          "We believe in building lasting relationships with our partners.",
      },
    ]}
    image={{
      src: DevelopImg,
      alt: "Develop with AQ",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        Achieve More Together
      </h3>
      Experience the benefits of strategic partnerships that drive innovation and
      expansion.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isAfterContent
    items={[
      {
        title: "Innovate Together",
        description:
          "Our partnerships unlock new opportunities for innovation and growth.",
      },
      {
        title: "Collaborative Projects",
        description:
          "Collaborating on projects that push the boundaries of what's possible.",
      },
      {
        title: "Global Reach",
        description: "Leveraging global networks to maximize impact and reach.",
      },
    ]}
    image={{
      src: WorkImg,
      alt: "Work with AQ",
    }}
  >
    <Fragment slot="content">
      Partner with us to explore new horizons and achieve unprecedented success.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: "Dedicated Support",
        description:
          "Our partners receive dedicated support and resources to ensure success.",
      },
      {
        title: "Exclusive Benefits",
        description:
          "Access exclusive benefits and opportunities through our partnership programs.",
      },
      {
        title: "Community Engagement",
        description:
          "Be part of a community of like-minded organizations committed to excellence.",
      },
    ]}
    image={{
      src: NetImg,
      alt: "AQ Net",
    }}
  >
    <Fragment slot="content">
      Join a thriving community of partners dedicated to achieving excellence.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-green-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Partnering with Us"
    subtitle="Find answers to common questions about becoming a partner."
    tagline="FAQs"
    classes={{ container: "max-w-6xl" }}
    items={[
      {
        title: "How Can We Become a Partner?",
        description:
          "Fill out our partnership inquiry form, and our team will get in touch with you to discuss potential collaboration.",
      },
      {
        title: "What Are the Benefits of Partnering?",
        description:
          "Partners gain access to exclusive resources, dedicated support, and a network of like-minded organizations.",
      },
      {
        title: "Can International Organizations Partner with You?",
        description:
          "Yes, we welcome international organizations to join our global network of partners.",
      },
      {
        title: "What Types of Partnerships Do You Offer?",
        description:
          "We offer various types of partnerships, including strategic, collaborative, sponsorship, and more.",
      },
      {
        title: "Where Can I Learn More About Your Partners?",
        description:
          "Visit our partners page for detailed information about our current partners and their success stories.",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: "primary",
        text: "Join Us",
        href: "#",
        // icon: "tabler:handshake",
      },
    ]}
  >
    <Fragment slot="title">
      Collaborate with&nbsp;<br class="block sm:hidden" /><span
        class="sm:whitespace-nowrap">Our Partners</span
      >
    </Fragment>
    <Fragment slot="subtitle">
      Become part of a thriving network that values innovation, growth, and
      mutual success.
    </Fragment>
  </CallToAction>
</Layout>
